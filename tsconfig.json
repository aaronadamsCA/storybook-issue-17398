{
  "include": ["packages/*/**/*", "packages/ui/.storybook/**/*"],
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "paths": {
      "@monorepo/mui-theme-base": ["./packages/mui-theme-base/src"],
      "@monorepo/ui": ["./packages/ui/src"]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext"
  }
}
